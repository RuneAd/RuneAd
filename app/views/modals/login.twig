<div class="modal fade" id="loginModal"
        tabindex="-1"
        role="dialog"
        aria-labelledby="loginModalLabel"
        aria-hidden="true">

    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">

            <div class="alert-box">
                <div class="alert mb-0" id="notice">
                    &nbsp;
                </div>
            </div>

            <div class="modal-body text-center  pt-5 py-3">
                <i class="fab fa-discord text-primary fa-5x mb-3"></i>
                <h3 class="mb-0">Login with Discord</h3>
                <p class="small mb-5">Click below to log in using your Discord Account.</p>

                <p><a href="" class="btn btn-primary rounded-pill px-5 mb-4" id="discord">Continue</a></p>

 <p class="small text-muted mb-0">
     By signing in and using our service you agree to our<br>
     <a href="{{ url('terms') }}" target="_blank">Terms of Service</a> and
     <a href="{{ url('privacy') }}" target="_blan">Privacy Policy</a>.
 </p>
            </div>
        </div>
    </div>
</div>

<script>
    $('#discord').on("click", function(event) {
        event.preventDefault();


        let button = $(this);

        button.html("<i class=\"fad fa-spinner fa-pulse\"></i>");
        button.addClass("disabled");

        $.post("{{ url('discord') }}", function(data) {
            console.log(data);

            let success = data.success;

            if (success) {
                setTimeout(function() {
                    let loc = data.message;
                    window.location = loc;
                }, 800);
            }
        });
    });
</script>
